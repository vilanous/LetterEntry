<Window x:Class="LetterEntry.Reports"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetterEntry"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Reports" Height="700" Width="900">
    <Grid HorizontalAlignment="Left" Width="900">
        <Label 
            Content="By ID" 
            HorizontalAlignment="Left" 
            Margin="11,14,0,0" 
            VerticalAlignment="Top"
            Width="69"/>
        <ComboBox 
            x:Name="rIDCombo"
            HorizontalAlignment="Left" 
            Margin="123,10,0,0" 
            VerticalAlignment="Top" 
            Width="280"
            Height="35"
            SelectionChanged="rIDCombo_SelectionChanged" 
            FontSize="14"
            VerticalContentAlignment="Center"
            IsEditable="True"/>
        <Label 
            Content="By Category" 
            HorizontalAlignment="Left" 
            Margin="11,57,0,0" 
            VerticalAlignment="Top"
            Width="86"/>
        <ComboBox 
            x:Name="rCategoryCombo"
            HorizontalAlignment="Left" 
            Margin="123,53,0,0" 
            VerticalAlignment="Top" 
            Width="280"
            Height="35"
            SelectionChanged="rCategoryCombo_SelectionChanged"
            FontSize="14"
            VerticalContentAlignment="Center"
            IsEditable="True"/>
        <Label 
            Content="By Reference" 
            HorizontalAlignment="Left" 
            Margin="11,100,0,0" 
            VerticalAlignment="Top"
            Width="86"/>
        <ComboBox 
            x:Name="rReferenceCombo"
            HorizontalAlignment="Left" 
            Margin="123,96,0,0" 
            VerticalAlignment="Top" 
            Width="280"
            Height="35"
            SelectionChanged="rReferenceCombo_SelectionChanged"
            FontSize="14"
            VerticalContentAlignment="Center"
            IsEditable="True"/>
        <Label 
            Content="By Contact" 
            HorizontalAlignment="Left" 
            Margin="489,14,0,0" 
            VerticalAlignment="Top"
            Width="86"/>
        <ComboBox 
            x:Name="rContactCombo"
            HorizontalAlignment="Left" 
            Margin="601,10,0,0" 
            VerticalAlignment="Top" 
            Width="280"
            Height="35"
            SelectionChanged="rContactCombo_SelectionChanged"
            FontSize="14"
            VerticalContentAlignment="Center"
            IsEditable="True"/>
        <Label 
            Content="By Department" 
            HorizontalAlignment="Left" 
            Margin="489,57,0,0" 
            VerticalAlignment="Top"
            Width="97"/>
        <ComboBox 
            x:Name="rDepartCombo"
            HorizontalAlignment="Left" 
            Margin="601,53,0,0" 
            VerticalAlignment="Top" 
            Width="280"
            Height="35"
            SelectionChanged="rDepartCombo_SelectionChanged"
            FontSize="14"
            VerticalContentAlignment="Center"
            IsEditable="True"/>
        <Label 
            Content="By Date" 
            HorizontalAlignment="Left" 
            Margin="489,100,0,0" 
            VerticalAlignment="Top"
            Width="97"/>
        <DatePicker 
            x:Name="rDate"
            HorizontalAlignment="Left" 
            Margin="601,96,0,0" 
            VerticalAlignment="Top" 
            Height="35" 
            Width="280"
            SelectedDateChanged="rDate_SelectedDateChanged"/>

        <DataGrid 
            x:Name="ReportGrid" 
            Height="500" 
            Margin="11,159,0,0" 
            VerticalAlignment="Top"
            ColumnWidth="*" 
            Width="870" 
            HorizontalAlignment="Left"/>

    </Grid>
</Window>
